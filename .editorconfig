# EditorConfig配置文件
# https://editorconfig.org

# 顶级配置
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++源文件
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# Python脚本
[*.py]
indent_style = space
indent_size = 4

# Shell脚本
[*.sh]
indent_style = space
indent_size = 2

# CMake文件
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON文件
[*.json]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile（必须使用Tab）
[Makefile]
indent_style = tab

# INI文件
[*.ini]
indent_style = space
indent_size = 2